<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>General title</th>
      <th>General description</th>
      <th>Subject</th>
      <th>Message</th>
      <th>Infohash code</th>
      <th>Owner</th>
      <th>Members</th>
      <th>Tags</th>
      <th>Visibility</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.infohash.gtitle %></td>
        <td><%= post.infohash.gdescription %></td>
        <td><%= post.subject %></td>
        <td><%= post.message %></td>
        <td><%= post.infohash.code %> </td>
        <td><%= post.infohash.user.username %> </td>
        <td>
          <% post.infohash.infohash_users.each do |u| %> 
            <%= u.user.username %>
            <% if current_user == post.user and (current_user != u.user) %>
              <%= link_to "(delete)", [post.infohash, u] ,method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
            <br>
          <% end %>
          <% if current_user == post.user #owner %>
              <%= link_to "New member", new_infohash_infohash_user_path(post.infohash) %>
          <% end %>
        </td>
        <td>
          <% post.infohash.tags.each do |t| %> 
          <%= t.tagname %>
          <% end %>
        </td>
        <td><%= post.visibility.vtype %></td>
        <td><%= link_to 'Show', post %></td>
        
        <% if current_user == post.user %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
