<p id="notice"><%= notice %></p>

<h1>Listing Pauthors</h1>

<table>
  <thead>
    <tr>
      <th>Publication</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pauthors.each do |pauthor| %>
      <tr>
        <td><%= pauthor.publication %></td>
        <td><%= pauthor.user %></td>
        <td><%= link_to 'Show', pauthor %></td>
        <td><%= link_to 'Edit', edit_pauthor_path(pauthor) %></td>
        <td><%= link_to 'Destroy', pauthor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

