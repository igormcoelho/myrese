<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @gfile.gtitle %>
</p>

<p>
  <strong>Description:</strong>
  <%= @gfile.gdescription %>
</p>

<p>
  <strong>File:</strong>
  <%= @gfile.filename.url %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @gfile.infohash.user.username %>
</p>

<p>
  <strong>Members:</strong>
  <% @gfile.infohash.members.each do |u| %>
    <%= u.username %><br>
  <% end %>
</p>

